<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="#8BC34A"
    android:padding="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="100dp"
    app:cardMaxElevation="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/foto_veterinario"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/mascotas"
                tools:ignore="NestedWeights" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="#D9D9D9"
            android:elevation="100dp"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/nombre_veterinario"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/ubuntu_bolditalic"
                android:text="Dr. Alejandro Martínez"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/ciudad_veterinario"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/ubuntu_bolditalic"
                android:text="Bogotá D.C"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/celular_veterinario"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:fontFamily="@font/ubuntu_bolditalic"
                android:text="Celular: 3102547896"
                android:textColor="@color/white" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RatingBar
                    android:id="@+id/ratingBar"
                    android:layout_width="240dp"
                    android:layout_height="50dp" />

                <TextView
                    android:id="@+id/reviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:text="(100 Reviews)"
                    android:textAlignment="center"
                    android:textColor="#3F51B5" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>