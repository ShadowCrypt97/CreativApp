<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:backgroundTint="@color/purple_200"
    android:padding="10dp"
    app:cardCornerRadius="25dp"
    app:cardElevation="100dp"
    app:cardMaxElevation="100dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:padding="10dp">

            <ImageView
                android:id="@+id/foto_mascota"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/mascotas"
                tools:ignore="NestedWeights" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:backgroundTint="#D9D9D9"
                android:elevation="100dp"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:id="@+id/nombre_mascota"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/ubuntu_bolditalic"
                    android:text="Kira"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/tipo_mascota"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/ubuntu_bolditalic"
                    android:text="Perro"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/edad_mascota"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:fontFamily="@font/ubuntu_bolditalic"
                    android:text="Edad: 4 aÃ±os"
                    android:textColor="@color/white" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>